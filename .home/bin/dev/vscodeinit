#!/usr/bin/env bash
set -e

whereami="`whereami`"
if [[ "$whereami" == 'darwin' ]]; then
  cd "$HOMELIB/Application Support"
elif [[ "$whereami" == 'windows' ]]; then
  cd "$APPDATA"
else
  cd "$HOME/.config"
fi
cd './Code/User'

[[ -f 'settings.json' ]] && surely 'overwrite VS Code settings'

echo '{
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  // "editor.cursorStyle": "line",
  // "editor.cursorWidth": 7,
  "editor.fontSize": 15,
  "editor.lineNumbers": "on",
  "editor.mouseWheelZoom": false,
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "explorer.confirmDragAndDrop": true,
  "explorer.confirmDelete": true,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "onFocusChange",
  "git.enableSmartCommit": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.confirmOnExit": "never",
  "workbench.sideBar.location": "left",
  "workbench.colorCustomizations": {
    "activityBar.activeBorder": "#230944",
    "activityBar.background": "#230944", // "activityBar.activeBackground": "#77e1d1",
    "activityBar.border": "#230944",
    "badge.background": "#4411ff",
    "editor.background": "#000000",
    "editorCursor.foreground": "#5522bb",
    "editorGroupHeader.tabsBackground": "#000000",
    "editorIndentGuide.activeBackground1": "#171117",
    "editorIndentGuide.background1": "#171117",
    "editor.selectionBackground": "#b2813d55",
    "editor.wordHighlightBackground": "#5533",
    "sideBar.background": "#000000",
    "sideBar.foreground": "#77e1d1",
    "sideBarSectionHeader.background": "#000000",
    "statusBar.background": "#000000",
    "statusBar.noFolderBackground": "#230944",
    "scrollbarSlider.activeBackground": "#7d7d7d",
    "scrollbarSlider.hoverBackground": "#7d7d7d",
    "tab.activeBackground": "#000000",
    "tab.activeForeground": "#77e1d1",
    "tab.inactiveBackground": "#000000",
    "tab.inactiveForeground": "#777777",    
    "titleBar.activeBackground": "#000000",
  },
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Solarized Dark",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.localHistory.maxFileEntries": 100,
  "workbench.localHistory.maxFileSize": 500,
  "workbench.localHistory.mergeWindow": 20,
  "workbench.startupEditor": "none",
  "update.mode": "manual",
  "window.menuBarVisibility": "hidden",
  "window.zoomLevel": 1,
  "window.customMenuBarAltFocus": false,
  "terminal.integrated.altClickMovesCursor": false
}' > settings.json

echo 'settings saved.'
